<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:padding="16dp"
    android:background="@color/cardview_light_background">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Express-AM3 140°E"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/danteny"
        android:layout_marginTop="10dp"
        android:text="На этой позиции стоит спутник предназначений для покрытия дальнего востока России. Имеет Ku и C диапазоны. Идет вещание федеральных и региональных российских каналов, а также платные пакеты VIVA - Восточный Экспресс и канал Наш Футбол."
        android:textSize="12dp" />

    <TextView
    android:id="@+id/danteny"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/satinfivalue"
    android:layout_alignParentStart="true"
    android:layout_marginTop="10dp"
    android:textSize="10dp"
    android:text="Диаметр антены:   см." />

    <TextView
        android:id="@+id/satinfivalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="10dp"
        android:text="Азимут:     ,угол места:" />

    <TextView
        android:id="@+id/lucht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:text="Луч: 4"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lucht"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Мощность:"
        android:textSize="10dp"
        android:visibility="invisible" />

</RelativeLayout>
